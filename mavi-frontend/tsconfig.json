{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "allowJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
}
  